#scrollbar1 .overview { list-style: none; position: absolute; left: 0; top: 0; padding: 0; margin: 0; overflow:hidden; background:url(../img/side_bar_bg.jpg) center top;height:100%;}
#scrollbar1 .scrollbar{position: relative; background-position: 0 0; float: right; margin-left:-10px; width: 10px; z-index:777; }
#scrollbar1 .track {background:#001d31\9;filter:progid:DXImageTransform.Microsoft.Alpha(opacity=47)\9; background:rgba(0,29,49,0.4);height:100%; width:10px; position: relative;}
#scrollbar1 .thumb { background:#b8e2ff url(../img/bar_02.png) no-repeat center center;width:10px;opacity:0.47;filter:progid:DXImageTransform.Microsoft.Alpha(opacity=47);height: 20px; border-radius:10px; width:10px; cursor: pointer; overflow: hidden; position: absolute; top: 0; left:0px;}
#scrollbar1 .thumb .end {overflow: hidden; height:0px; width:0px; }
#scrollbar1 .disable { display: none; }
.noSelect { user-select: none; -o-user-select: none; -moz-user-select: none; -khtml-user-select: none; -webkit-user-select: none; }
